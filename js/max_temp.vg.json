{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "data/Australia_Rainfall.csv"
  },
  "title": "Daily Max Temperatures (째C)",
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 20
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "row": {"field": "State"},
      "x": {
          "field": "Date",
          "timeUnit": "date",
          "type": "ordinal",
          "title": "Day",
          "axis": {
              "labelAngle": 0,
              "format": "%e"
          }
      },
      "y": {
          "field": "Date",
          "timeUnit": "month",
          "type": "ordinal",
          "title": "Month"
      },
      "color": {
          "field": "Max 째C",
          "aggregate": "max",
          "type": "quantitative",
          "legend": {
              "title": null
          }
      },
        "tooltip": [{"timeUnit": "year", "field": "Date", "title": "Year"},
                    {"timeUnit": "month", "field": "Date", "title": "Month"},
                {"aggregate":"max", "field": "Max 째C", "type": "quantitative","format": "d", "title": "Max Temp째C"}
                ]
  }
}

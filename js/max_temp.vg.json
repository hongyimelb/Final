{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "data/Australia_Rainfall.csv"
  },
  "title": "Monthly Max Temperatures (°C)",
  "config": {
      "view": {
          "strokeWidth": 15,
          "step": 30
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "Date",
          "timeUnit": "yearmonth",
          "type": "ordinal",
          "title": "Month/Year"
      },
      "y": {
          "field": "State",
          "type": "nominal",
          "title": "State"
      },
      "color": {
          "field": "Max °C",
          "aggregate": "max",
          "type": "quantitative",
          "scale": {"scheme": "reds"},
          "legend": {
              "title": "Temp°C"
          }
      },
        "tooltip": [{"field": "State"},
                    {"timeUnit": "yearmonth", "field": "Date", "title": "Month/Year"},
                {"aggregate":"max", "field": "Max °C", "type": "quantitative","format": "d", "title": "Max Temp°C"},
                    {"field": "Station", "type": "nominal"}
                ]
  }
}

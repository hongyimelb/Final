{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "data/Australia_Rainfall.csv"
  },
  "title": "Monthly Max Temperatures (°C)",
  "config": {
      "view": {
          "strokeWidth": 10,
          "step": 40
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "Date",
          "timeUnit": "utcyearmonth",
          "type": "ordinal",
          "title": "Date",
          "axis": {
              "labelAngle": 0,
              "format": "%e"
          }
      },
      "y": {
          "field": "State",
          "type": "nominal",
          "title": "State"
      },
      "color": {
          "field": "Max °C",
          "aggregate": "max",
          "type": "quantitative",
          "legend": {
              "title": "Temp°C"
          }
      },
        "tooltip": [{"timeUnit": "year", "field": "Date", "title": "Year"},
                    {"timeUnit": "month", "field": "Date", "title": "Month"},
                {"aggregate":"max", "field": "Max °C", "type": "quantitative","format": "d", "title": "Max Temp°C"}
                ]
  }
}

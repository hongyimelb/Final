{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Average Rainfall by Month",
  "data": {"url": "data/Australia_Rainfall.csv"},
  "encoding": {
    "x": {"timeUnit": "month", "field": "Date", "title": "Month"},
    "y": {"aggregate":"mean", "field": "Rain(mm)", "type": "quantitative"},
    "color": {"field": "State", "type": "nominal"},
    "tooltip": [{"field": "State", "type": "nominal"},
                {"aggregate":"mean", "field": "Rain(mm)", "type": "quantitative","format": ".2f"},
                {"timeUnit": "month", "field": "Date", "title": "Month"}]},
   "params": [
 {
 "name": "state_selection",
 "bind": {
 "input": "select",
 "options": [
 null,
 "VIC",
 "NSW",
 "ACT",
 "TAS",
 "NT",
 "QLD",
 "SA",
 "WA"
 ],
 "labels":[
 "Show All",
 "VIC",
 "NSW",
 "ACT",
 "TAS",
 "NT",
 "QLD",
 "SA",
 "WA"
 ],
 "name": "State Selection: "
 }
 }
 ],
  "transform": [
 {"filter": "state_selection == null || datum.State == state_se
lection"}],
  "layer": [{
  "mark": {
    "type": "line",
    "point": true}
  },
            {
           "mark": {
 "type": "text",
 "align": "right",
 "baseline": "middle",
 "dx": -12,
 "fontSize": 11.5,
 "fontStyle": "italic"
 },
          "encoding": {
 "text": {"field": "State", "type": "nominal"},
 "color": {"value": "black"},
 "opacity": {"condition": {
 "test": "datum['State'] == 'VIC'",
 "value": 1
 },
 "value": 0
 }}
  }]
}

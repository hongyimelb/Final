{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Average Rainfall by Month",
  "data": {"url": "data/Australia_Rainfall.csv"},
  "transform": [
    {
      "calculate": "datetime(datum.Year, datum.Month, datum.Date)",
      "as": "combined_date"
    }
  ],
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {"timeUnit": "month", "field": "combined_date"},
    "y": {"aggregate":"mean", "field": "Rain(mm)", "type": "quantitative"},
    "color": {"field": "State", "type": "nominal"}
  }
}

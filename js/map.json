{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Australian Bushfires from Satellites",
  "projection": {"type": "mercator", "scale":600, "center":[133,-27]},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hongyimelb/final/master/js/OCE.topojson",
        "format": {"type": "topojson", "feature": "custom"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hongyimelb/final/master/data/final.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "track",
          "type": "quantitative",
          "scale": {"domain": [0, 4]}
        },
        "tooltip": [{"field": "longitude"}, {"field": "latitude"}, {"field": "brightness"}, {"field": "instrument"}, {"field": "acq_date"}],
        "color": {
          "field": "brightness",
          "type": "quantitative",
          "scale": {"scheme": "reds"}
        }
      }
    }
  ]
}

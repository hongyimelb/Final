{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "width": 400,
  "height": 300,
  "data": {
      "url": "data/Australia_Rainfall.csv"
  },
  "mark": "bar",
  "transform": [
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{"field": "Max 째C", "order": "descending" }]
    }, {
      "filter": "datum.rank <= 40"
    }
  ],
  "encoding": {
    "x": {"field": "Station", "type": "nominal", "sort": "-y"},
    "y": {"aggregate":"max", "field": "Max 째C", "type": "quantitative", "title":"Max 째C"},
        "tooltip": [{"field": "State", "type": "nominal"},
                {"field": "Station", "type": "nominal"},
                {"field": "Max 째C", "type": "quantiative"}
               ],
    "color": {"field": "State", "type": "nominal"}
  }
}

